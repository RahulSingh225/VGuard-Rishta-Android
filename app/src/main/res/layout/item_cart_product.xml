<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/dp_16"
    android:elevation="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivProductImg"
            android:layout_width="@dimen/dp_150"
            tools:src="@drawable/ic_rewards_gift"
            android:layout_height="180dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProdDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:padding="@dimen/dp_4"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:text="Sony Tv 40 Inches Bravia LED 5875" />


            <TextView
                android:id="@+id/tvProductId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_2"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:text="Silver Grey" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_2"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="Automatic 250V" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_2"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"

                android:visibility="gone"
                tools:text="With Installation Unit" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_2"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="No Add On" />

            <TextView
                android:id="@+id/tvPoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_8"
                android:gravity="end"
                android:padding="@dimen/dp_2"
                android:textColor="@color/yellow"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                tools:text="80000 PTS" />

            <ImageView
                android:id="@+id/ivRemoveCart"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:gravity="center|end"
                android:src="@drawable/ic_close" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>