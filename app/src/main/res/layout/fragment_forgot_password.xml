<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivRishtaLogo"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_16"
        android:contentDescription="@string/app_logo"
        android:src="@drawable/group_599" />

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_8"
        android:fontFamily="@font/nunito_extrabold"
        android:gravity="center"
        android:text="@string/lbl_forgot_password"
        android:textColor="@color/custom_black" />

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/nunito"
        android:gravity="center"
        android:text="@string/enter_registered_mobile_no_rishta_id"
        android:textColor="@color/text"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:id="@+id/llMobileNumberRishtaId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_32"
        android:background="@drawable/rectangle_3"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_32">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_2"
            android:contentDescription="@string/mobile_icon"
            android:src="@drawable/mobile_icon" />

        <EditText
            android:id="@+id/etMobileNumberRishtaId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_weight="1"
            android:background="@color/white"
            android:fontFamily="@font/nunito"
            android:hint="@string/lbl_registered_mobile_number_login"
            android:inputType="phone"
            android:maxLength="10"
            android:padding="@dimen/dp_6"
            android:singleLine="true"
            android:textSize="@dimen/sp_16"
            tools:ignore="Autofill,LabelFor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:background="@drawable/rectangle_1"
        android:gravity="center">

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dp_32"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@drawable/transparent_ripple"
            android:drawableEnd="@drawable/arrow"
            android:drawablePadding="-24dp"
            android:elevation="@dimen/dp_10"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:translationZ="@dimen/dp_6" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="0dp"
            android:background="@color/grey_400"
            android:gravity="bottom|center"
            android:paddingVertical="@dimen/dp_12"
            tools:ignore="UselessParent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/powered_by_v_guard"
                android:src="@drawable/group_912" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>